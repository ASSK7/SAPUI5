<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.dpZODATA_CRUD_OPERATIONS.controller.View1"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="CRUD Operations">
				<content>
					<f:SimpleForm editable="true"  layout="ResponsiveGridLayout" id="idSF"
					labelSpanL="4"
					labelSpanM="4"
					labelSpanS="2"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="3"
					columnsL="1"
					columnsM="1">
						<f:content>
							<Label text="Employee ID"></Label>
							<Input id="empId"></Input>
							<Label text="Employee Name"></Label>
							<Input id="empName"></Input>
							<Label text="Employee Designation"></Label>
							<Input id="empDesig"></Input>
							<Label text="Employee Mobile"></Label>
							<Input id="empMobile"></Input>
							<Label text="Employee City"></Label>
							<Input id="empCity"></Input>
							<Label text="Employee Country"></Label>
							<Input id="empCtry"></Input>
						</f:content>
							<Toolbar>
								<ToolbarSpacer></ToolbarSpacer>
								<Button text="Clear" press="onClear" type="Accept"></Button>
								<Button text="Create" press="onCreate" type="Accept"></Button>
								</Toolbar>
					</f:SimpleForm>
					<Table id="idTable" items="{M1>/employeeSet}" mode="SingleSelect">
						<headerToolbar>
							<Toolbar>
								<ToolbarSpacer/>
								<Button text="Display" press="onDisplay" icon="sap-icon://display" type="Transparent"></Button>
								<Button id="idEdit" text="Edit" press="onEdit" icon="sap-icon://edit" type="Emphasized"></Button>
								<Button text="Delete" press="onDelete" icon="sap-icon://delete" type="Reject"></Button>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Label text="Employee ID"></Label>
							</Column>
							<Column>
								<Label text="Name"></Label>
							</Column>
							<Column>
								<Label text="Designation"></Label>
							</Column>
							<Column>
								<Label text="Mobile"></Label>
							</Column>
							<Column>
								<Label text="City"></Label>
							</Column>
							<Column>
								<Label text="Country"></Label>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{M1>Employeid}"></Text>
									<Text text="{M1>Empname}"></Text>
									<Text text="{M1>Empdesg}"></Text>
									<Text text="{M1>Empmobile}"></Text>
									<Text text="{M1>Empcity}"></Text>
									<Text text="{M1>Empcountry}"></Text>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>