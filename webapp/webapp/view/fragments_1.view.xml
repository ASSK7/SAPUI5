<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.dpZFRAGMENTS.controller.fragments_1"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="Fragments">
				<content>
					<f:SimpleForm emptySpanL="6" emptySpanM="6" labelSpanL="3" labelSpanM="3" columnsL="1" columnsM="1"
					              layout="ResponsiveGridLayout" editable="true">
						<Label text="Employee ID(Object List Item VH)"></Label>
						<Input id="idObj" showValueHelp="true" valueLiveUpdate="true" liveChange="onLiveObjChange"
						valueHelpRequest="onValueHelpRequest"></Input>
						
						<Label text="Employee ID(Table VH)"></Label>
						<Input id="idObj2" showValueHelp="true" valueLiveUpdate="true" liveChange="onLiveTblChange"
						valueHelpRequest="onTableVHRequest"></Input>
						
						<Label text="Employee ID(SelectDialog VH)"></Label>
						<Input id="idObj3" showValueHelp="true" valueLiveUpdate="true" liveChange="onLiveSDChange"
						valueHelpRequest="onSDVHRequest"></Input>
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>